<html>
  <body>
    <div class="errors"><%= flash[:errors] %></div>
    <% form_for :user, @user, :url => { :action => "authenticate" } do |f| %>
      <p><label for="user_name">Name</label>
      <%= f.text_field :name %> </p>
      <p><label for="user_password">Password</label>
      <%= f.password_field :password %></p>
      <%= submit_tag "Login" %>
    <% end %>
  </body>
</html>
