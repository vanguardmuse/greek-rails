<div class="errors"><%= flash[:errors] %></div>
<% form_for :user, @user, :url => { :action => "authenticate" } do |f| %>
  <label for="user_name">Name</label>
  <%= f.text_field :name %> 
  <label for="user_password">Password</label>
  <%= f.password_field :password %>
  <%= submit_tag "Login" %>
<% end %>
